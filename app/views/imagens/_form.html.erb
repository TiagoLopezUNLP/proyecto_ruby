<%= form_with(model: imagen, class: "contents") do |form| %>
  <% if imagen.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(imagen.errors.count, "error") %> prohibited this imagen from being saved:</h2>

      <ul class="list-disc ml-6">
        <% imagen.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :url %>
    <%= form.textarea :url, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": imagen.errors[:url].none?, "border-red-400 focus:outline-red-600": imagen.errors[:url].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :producto_id %>
    <%= form.text_field :producto_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": imagen.errors[:producto_id].none?, "border-red-400 focus:outline-red-600": imagen.errors[:producto_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
