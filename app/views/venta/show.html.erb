<div class="max-w-4xl mx-auto">
  <div class="bg-slate-800 rounded-lg shadow-xl border border-slate-700 p-8">
    <!-- Header -->
    <div class="flex justify-between items-start mb-6 pb-6 border-b border-slate-700">
      <div>
        <h1 class="text-3xl font-bold text-white mb-2">Detalle de Venta</h1>
        <p class="text-slate-400">Venta Nº <%= @ventum.id.to_s.rjust(6, '0') %></p>
      </div>
      <div class="text-right">
        <p class="text-sm text-slate-400">Fecha</p>
        <p class="text-lg font-semibold text-white"><%= @ventum.fecha.strftime('%d/%m/%Y %H:%M') if @ventum.fecha %></p>
      </div>
    </div>

    <%= render @ventum %>

    <!-- Detalle de productos -->
    <div class="mt-8">
      <h2 class="text-xl font-bold text-white mb-4">Productos vendidos</h2>
      <div class="bg-slate-900 rounded-lg overflow-hidden">
        <table class="w-full">
          <thead class="bg-slate-700">
            <tr>
              <th class="px-4 py-3 text-left text-sm font-semibold text-slate-300">Producto</th>
              <th class="px-4 py-3 text-center text-sm font-semibold text-slate-300">Cantidad</th>
              <th class="px-4 py-3 text-right text-sm font-semibold text-slate-300">Precio Unit.</th>
              <th class="px-4 py-3 text-right text-sm font-semibold text-slate-300">Subtotal</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-700">
            <% @ventum.detalle_ventas.each do |detalle| %>
              <tr class="hover:bg-slate-800 transition">
                <td class="px-4 py-3 text-white"><%= detalle.producto.nombre %></td>
                <td class="px-4 py-3 text-center text-slate-300"><%= detalle.cantidad %></td>
                <td class="px-4 py-3 text-right text-slate-300">$<%= number_with_delimiter(detalle.precio_unitario, delimiter: '.') %></td>
                <td class="px-4 py-3 text-right text-white font-semibold">$<%= number_with_delimiter(detalle.subtotal, delimiter: '.') %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-slate-700">
            <tr>
              <td colspan="3" class="px-4 py-4 text-right text-lg font-bold text-white">TOTAL:</td>
              <td class="px-4 py-4 text-right text-2xl font-bold text-blue-400">$<%= number_with_delimiter(@ventum.total, delimiter: '.') %></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>

    <!-- Acciones -->
    <div class="flex flex-wrap justify-center gap-5 mt-8 mx-auto pt-6 border-t border-slate-700">
      <%= link_to venta_path, class: "inline-flex items-center px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg font-medium transition duration-300 border border-slate-600" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Volver a ventas
      <% end %>

      <%= link_to @ventum, class: "inline-flex items-center justify-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition duration-300" do %>
        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 3v4a2 2 0 002 2h4"/>
        </svg>
        Generar Factura PDF
      <% end %>
      
      <%= button_to @ventum, method: :delete, 
          class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition duration-300",
          data: { turbo_confirm: "¿Estás seguro de eliminar esta venta?" } do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Cancelar venta
      <% end %>
    </div>
  </div>
</div>
