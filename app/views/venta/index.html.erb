<div class="min-h-screen bg-slate-900 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-8 gap-4">
      <div>
        <h1 class="text-3xl font-bold text-white">Gestión de Ventas</h1>
        <p class="text-slate-400 mt-1">Administra todas las ventas realizadas</p>
      </div>
      <%= link_to nueva_venta_path, class: "rounded-xl bg-indigo-500 hover:bg-indigo-400 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 transition transform hover:-translate-y-0.5 flex items-center gap-2 justify-center sm:justify-start" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Nueva Venta
      <% end %>
    </div>

    <div class="space-y-4">
      <% if @venta.any? %>
        <% @venta.each do |ventum| %>
          <div class="bg-slate-800/60 rounded-3xl border border-slate-700/60 shadow-2xl hover:border-indigo-500/50 transition duration-300 overflow-hidden">
            <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center p-4 sm:p-6 gap-4">
              <!-- Información principal de la venta -->
              <div class="w-full grid grid-cols-2 sm:grid-cols-4 gap-3 sm:gap-4">
                <!-- Número de venta -->
                <div>
                  <p class="text-xs text-slate-400 mb-1">N° Venta</p>
                  <p class="text-base sm:text-lg font-bold text-indigo-400">#<%= ventum.id.to_s.rjust(6, '0') %></p>
                </div>
                
                <!-- Fecha -->
                <div>
                  <p class="text-xs text-slate-400 mb-1">Fecha</p>
                  <p class="text-sm sm:text-base text-white font-medium">
                    <%= ventum.fecha.present? ? ventum.fecha.strftime('%d/%m/%Y') : 'N/A' %>
                  </p>
                  <p class="text-xs text-slate-500">
                    <%= ventum.fecha.present? ? ventum.fecha.strftime('%H:%M') : '' %>
                  </p>
                </div>
                
                <!-- Cliente -->
                <div class="col-span-2 sm:col-span-1">
                  <p class="text-xs text-slate-400 mb-1">Cliente</p>
                  <p class="text-sm sm:text-base text-white font-medium truncate">
                    <%= ventum.NyA_comprador.present? ? ventum.NyA_comprador : 'Sin especificar' %>
                  </p>
                  <% if ventum.dni_comprador.present? %>
                    <p class="text-xs text-slate-500">DNI: <%= ventum.dni_comprador %></p>
                  <% end %>
                </div>
                
                <!-- Total -->
                <div class="col-span-2 sm:col-span-1">
                  <p class="text-xs text-slate-400 mb-1">Total</p>
                  <p class="text-xl sm:text-2xl font-bold text-green-400">
                    $<%= number_with_delimiter(ventum.total, delimiter: '.') %>
                  </p>
                </div>
              </div>
              
              <!-- Productos comprados -->
              <div class="w-full lg:w-auto lg:min-w-[280px] xl:min-w-[350px]">
                <p class="text-xs text-slate-400 mb-2">Productos</p>
                <div class="space-y-1.5 max-h-32 overflow-y-auto custom-scrollbar">
                  <% ventum.detalle_ventas.group_by(&:producto_id).each do |producto_id, detalles| %>
                    <% producto = detalles.first.producto %>
                    <% cantidad = detalles.sum(&:cantidad) %>
                    <% subtotal = detalles.sum(&:subtotal) %>
                    <div class="flex items-center justify-between bg-slate-700/50 rounded-lg px-2 sm:px-3 py-1.5 text-xs sm:text-sm">
                      <div class="flex items-center gap-1.5 sm:gap-2 flex-1 min-w-0">
                        <% if cantidad > 1 %>
                          <span class="inline-flex items-center justify-center w-5 h-5 sm:w-6 sm:h-6 bg-indigo-600 text-white text-xs font-bold rounded">
                            x<%= cantidad %>
                          </span>
                        <% end %>
                        <span class="text-slate-300 truncate">
                          <%= producto.nombre %>
                        </span>
                      </div>
                      <span class="text-green-400 font-semibold whitespace-nowrap ml-2 text-xs sm:text-sm">
                        $<%= number_with_delimiter(subtotal, delimiter: '.') %>
                      </span>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Acciones -->
              <div class="flex flex-row gap-3 w-full lg:w-auto lg:flex-col">
                <%= link_to ventum, class: "flex-1 lg:flex-none inline-flex items-center justify-center px-4 py-2.5 bg-slate-700 hover:bg-slate-600 text-white rounded-lg font-medium transition duration-300 border border-slate-600 text-sm" do %>
                  <svg class="h-5 w-5 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  <span>Ver</span>
                <% end %>
                
                <% unless ventum.cancelada? %>
                  <%= button_to ventum, method: :delete, 
                      class: "flex-1 lg:flex-none inline-flex items-center justify-center px-4 py-2.5 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition duration-300 text-sm",
                      data: { turbo_confirm: "¿Estás seguro de cancelar esta venta? El stock será restaurado." } do %>
                    <svg class="w-5 h-5 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                    <span>Cancelar</span>
                  <% end %>
                <% else %>
                  <span class="flex-1 lg:flex-none inline-flex items-center justify-center px-4 py-2.5 bg-slate-600 text-slate-400 rounded-lg font-medium text-sm cursor-not-allowed">
                    <svg class="w-5 h-5 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                    <span>Cancelada</span>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-16 bg-slate-800/60 rounded-3xl border border-slate-700/60">
          <svg class="mx-auto h-16 w-16 sm:h-20 sm:w-20 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <h3 class="mt-4 text-lg font-medium text-slate-300">No hay ventas registradas</h3>
          <p class="mt-2 text-sm text-slate-500">Comienza registrando tu primera venta</p>
          <%= link_to nueva_venta_path, class: "mt-6 inline-flex items-center gap-2 rounded-xl bg-indigo-500 hover:bg-indigo-400 px-6 py-3 text-sm font-semibold text-white transition" do %>
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nueva Venta
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
  }
  
  .custom-scrollbar::-webkit-scrollbar-track {
    background: rgb(51 65 85 / 0.3);
    border-radius: 3px;
  }
  
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgb(71 85 105 / 0.7);
    border-radius: 3px;
  }
  
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgb(100 116 139 / 0.9);
  }
  
  /* Firefox */
  .custom-scrollbar {
    scrollbar-width: thin;
    scrollbar-color: rgb(71 85 105 / 0.7) rgb(51 65 85 / 0.3);
  }
</style>
