<% content_for :title, "Artista: #{@autor.nombre}" %>

<div class="min-h-screen bg-slate-900 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-white"><%= @autor.nombre %></h1>
          <p class="text-slate-400 mt-1">Detalles del artista</p>
        </div>

        <div class="flex flex-wrap items-center gap-3">
          <%= link_to edit_autor_path(@autor),
                      class: "flex items-center gap-2 rounded-xl bg-indigo-500 hover:bg-indigo-400 px-4 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 transition" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Editar Artista
          <% end %>

          <%= link_to "Volver a Artistas", autors_path,
                      class: "rounded-xl bg-slate-700 hover:bg-slate-600 px-4 py-3 text-sm font-semibold text-white transition" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2">
        <div class="bg-slate-800/60 rounded-2xl border border-slate-700/60 p-6 mb-6">
          <div class="flex items-center gap-6 mb-6">
            <div class="h-20 w-20 rounded-full bg-indigo-500/20 flex items-center justify-center">
              <svg class="h-10 w-10 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-white"><%= @autor.nombre %></h2>
              <div class="flex items-center gap-3 mt-2">
                <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-slate-700 text-slate-300 text-sm">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                  <%= @autor.productos.count %> productos
                </span>
              </div>
            </div>
          </div>

          <!-- Productos del artista -->
          <% if @autor.productos.any? %>
            <div class="mt-8">
              <h3 class="text-lg font-semibold text-white mb-4">Discos de <%= @autor.nombre %></h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% @autor.productos.each do |producto| %>
                  <%= link_to producto_path(producto),
                              class: "bg-slate-800/40 hover:bg-slate-800/60 rounded-xl border border-slate-700/50 p-4 transition" do %>
                    <div class="flex items-center justify-between">
                      <div>
                        <h4 class="font-medium text-white"><%= producto.nombre %></h4>
                        <div class="flex items-center gap-2 mt-1">
                          <span class="text-xs px-2 py-1 rounded-full <%= producto.tipo == 'Vinilo' ? 'bg-purple-500/20 text-purple-300' : 'bg-blue-500/20 text-blue-300' %>">
                            <%= producto.tipo %>
                          </span>
                          <span class="text-xs px-2 py-1 rounded-full <%= producto.estado == 'Nuevo' ? 'bg-green-500/20 text-green-300' : 'bg-amber-500/20 text-amber-300' %>">
                            <%= producto.estado %>
                          </span>
                        </div>
                      </div>
                      <span class="text-sm font-semibold text-white">
                        $<%= number_with_delimiter(producto.precio, delimiter: '.') %>
                      </span>
                    </div>
                    <% if producto.categoria %>
                      <div class="mt-2">
                        <span class="text-xs text-slate-500">
                          <%= producto.categoria.nombre %>
                        </span>
                      </div>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="text-center py-8">
              <div class="mx-auto h-12 w-12 rounded-full bg-slate-700/50 flex items-center justify-center mb-3">
                <svg class="h-6 w-6 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
              </div>
              <p class="text-slate-500">Este artista no tiene productos asociados</p>
              <%= link_to "Crear Producto", new_producto_path(autor_id: @autor.id),
                          class: "mt-4 inline-flex items-center gap-2 rounded-xl bg-emerald-500 hover:bg-emerald-400 px-4 py-2 text-sm font-medium text-white transition" %>
            </div>
          <% end %>
        </div>
      </div>


        <!-- Estadísticas -->
        <div class="bg-slate-800/60 rounded-2xl border border-slate-700/60 p-6 mb-6">
          <h3 class="text-lg font-semibold text-white mb-4">Estadísticas</h3>
          <div class="space-y-4">
            <div>
              <p class="text-sm text-slate-400">Total de productos</p>
              <p class="text-2xl font-bold text-white"><%= @autor.productos.count %></p>
            </div>
            <% if @autor.productos.any? %>
              <div>
                <p class="text-sm text-slate-400">Vinilos / CDs</p>
                <div class="flex items-center gap-4 mt-2">
                  <div class="flex-1">
                    <div class="flex items-center justify-between mb-1">
                      <span class="text-xs text-purple-300">Vinilos</span>
                      <span class="text-xs text-slate-300">
                        <%= @autor.productos.where(tipo: 'vinilo').count %>
                      </span>
                    </div>
                    <div class="h-2 bg-slate-700 rounded-full overflow-hidden">
                      <div class="h-full bg-purple-500"
                           style="width: <%= (@autor.productos.where(tipo: 'vinilo').count.to_f / @autor.productos.count * 100).round %>%"></div>
                    </div>
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center justify-between mb-1">
                      <span class="text-xs text-blue-300">CDs</span>
                      <span class="text-xs text-slate-300">
                        <%= @autor.productos.where(tipo: 'cd').count %>
                      </span>
                    </div>
                    <div class="h-2 bg-slate-700 rounded-full overflow-hidden">
                      <div class="h-full bg-blue-500"
                           style="width: <%= (@autor.productos.where(tipo: 'cd').count.to_f / @autor.productos.count * 100).round %>%"></div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Acciones rápidas -->
        <div class="bg-slate-800/60 rounded-2xl border border-slate-700/60 p-6">
          <h3 class="text-lg font-semibold text-white mb-4">Acciones</h3>
          <div class="space-y-3">
            <%= link_to "Ver todos los artistas", autors_path,
                        class: "flex items-center justify-center gap-2 w-full rounded-xl bg-slate-700 hover:bg-slate-600 px-4 py-2.5 text-sm font-medium text-white transition" %>

            <%= link_to "Crear nuevo producto", new_producto_path(autor_id: @autor.id),
                        class: "flex items-center justify-center gap-2 w-full rounded-xl bg-emerald-500 hover:bg-emerald-400 px-4 py-2.5 text-sm font-medium text-white transition" %>

            <% if @autor.productos.any? %>
              <button onclick="alert('No se puede eliminar el artista porque tiene <%= @autor.productos.count %> producto(s) asociado(s).')"
                      class="flex items-center justify-center gap-2 w-full rounded-xl bg-red-500/50 text-red-300 px-4 py-2.5 text-sm font-medium cursor-not-allowed">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                No se puede eliminar
              </button>
            <% else %>
              <%= button_to "Eliminar artista", @autor,
                            method: :delete,
                            class: "flex items-center justify-center gap-2 w-full rounded-xl bg-red-500 hover:bg-red-400 px-4 py-2.5 text-sm font-medium text-white transition",
                            data: { turbo_confirm: "¿Estás seguro de eliminar este artista?" } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>