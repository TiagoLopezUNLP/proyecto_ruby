<div id="<%= dom_id producto %>" class="bg-slate-800/60 rounded-3xl border border-slate-700/60 shadow-2xl overflow-hidden">
  <!-- Header con imagen -->
  <div class="relative h-64 bg-gradient-to-br from-indigo-500/20 to-purple-500/20">
    <% if producto.imagenes.attached? %>
      <%= image_tag producto.imagenes.first, class: "w-full h-full object-cover" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center">
        <svg class="h-24 w-24 text-slate-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    <% end %>
    
    <!-- Badges flotantes -->
    <div class="absolute top-4 right-4 flex gap-2">
      <% case producto.estado %>
      <% when 'nuevo' %>
        <span class="px-3 py-1 text-xs font-semibold rounded-full bg-emerald-500/90 text-white backdrop-blur-sm">
          Nuevo
        </span>
      <% when 'usado' %>
        <span class="px-3 py-1 text-xs font-semibold rounded-full bg-amber-500/90 text-white backdrop-blur-sm">
          Usado
        </span>
      <% end %>
      
      <span class="px-3 py-1 text-xs font-semibold rounded-full bg-blue-500/90 text-white backdrop-blur-sm">
        <%= producto.tipo&.capitalize %>
      </span>
    </div>
  </div>

  <!-- Contenido -->
  <div class="p-8 space-y-6">
    <!-- Título y precio -->
    <div class="border-b border-slate-700 pb-6">
      <h2 class="text-3xl font-bold text-white mb-2"><%= producto.nombre %></h2>
      <div class="flex items-center gap-4">
        <span class="text-4xl font-bold text-indigo-400">$<%= number_with_precision(producto.precio, precision: 2) %></span>
        <% if producto.stock > 10 %>
          <span class="px-4 py-2 text-sm font-semibold rounded-full bg-green-500/20 text-green-400">
            <%= producto.stock %> en stock
          </span>
        <% elsif producto.stock > 0 %>
          <span class="px-4 py-2 text-sm font-semibold rounded-full bg-yellow-500/20 text-yellow-400">
            Solo <%= producto.stock %> disponibles
          </span>
        <% else %>
          <span class="px-4 py-2 text-sm font-semibold rounded-full bg-red-500/20 text-red-400">
            Agotado
          </span>
        <% end %>
      </div>
    </div>

    <!-- Descripción -->
    <div>
      <h3 class="text-lg font-semibold text-slate-300 mb-3">Descripción</h3>
      <p class="text-slate-400 leading-relaxed"><%= producto.descripcion %></p>
    </div>

     <!-- Audio de Muestra (si existe) -->
    <% if producto.audio_muestra.attached? %>
      <div class="bg-gradient-to-r from-indigo-500/10 to-purple-500/10 rounded-xl p-6 border border-indigo-500/30">
        <div class="flex items-center gap-3 mb-4">
          <div class="h-10 w-10 rounded-full bg-indigo-500/20 flex items-center justify-center">
            <svg class="h-6 w-6 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-white">Audio de Muestra</h3>
            <p class="text-sm text-slate-400">Escucha una vista previa del producto</p>
          </div>
        </div>
        <audio controls preload="metadata" class="w-full">
          <source src="<%= url_for(producto.audio_muestra) %>" type="audio/mpeg">
          Tu navegador no soporta el elemento de audio.
        </audio>
      </div>
    <% end %>

    <!-- Detalles en grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="bg-slate-900/50 rounded-xl p-4 border border-slate-700">
        <div class="text-sm text-slate-500 mb-1">Autor</div>
        <div class="text-lg font-medium text-white"><%= producto.autor.nombre %></div>
      </div>

      <div class="bg-slate-900/50 rounded-xl p-4 border border-slate-700">
        <div class="text-sm text-slate-500 mb-1">Categoría</div>
        <div class="text-lg font-medium text-white"><%= producto.categoria.nombre %></div>
      </div>

      <% if producto.fecha_ingreso.present? %>
        <div class="bg-slate-900/50 rounded-xl p-4 border border-slate-700">
          <div class="text-sm text-slate-500 mb-1">Fecha de Ingreso</div>
          <div class="text-lg font-medium text-white"><%= producto.fecha_ingreso.strftime("%d/%m/%Y") %></div>
        </div>
      <% end %>

      <% if producto.fecha_modificacion.present? %>
        <div class="bg-slate-900/50 rounded-xl p-4 border border-slate-700">
          <div class="text-sm text-slate-500 mb-1">Última Modificación</div>
          <div class="text-lg font-medium text-white"><%= producto.fecha_modificacion.strftime("%d/%m/%Y") %></div>
        </div>
      <% end %>

      <% if producto.fecha_baja.present? %>
        <div class="bg-slate-900/50 rounded-xl p-4 border border-slate-700">
          <div class="text-sm text-slate-500 mb-1">Fecha de Baja</div>
          <div class="text-lg font-medium text-red-400"><%= producto.fecha_baja.strftime("%d/%m/%Y") %></div>
        </div>
      <% end %>
    </div>

    <!-- Galería de imágenes -->
    <% if producto.imagenes.attached? && producto.imagenes.count > 1 %>
      <div>
        <h3 class="text-lg font-semibold text-slate-300 mb-3">Más imágenes</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <% producto.imagenes.drop(1).each do |imagen| %>
            <%= image_tag imagen, class: "w-full h-32 object-cover rounded-lg border-2 border-slate-700 hover:border-indigo-500 transition" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>