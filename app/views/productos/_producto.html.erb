<div id="<%= dom_id producto %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Nombre:</strong>
    <%= producto.nombre %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Descripcion:</strong>
    <%= producto.descripcion %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Precio:</strong>
    <%= producto.precio %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Stock:</strong>
    <%= producto.stock %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Fecha ingreso:</strong>
    <%= producto.fecha_ingreso %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Fecha modificacion:</strong>
    <%= producto.fecha_modificacion %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Fecha baja:</strong>
    <%= producto.fecha_baja %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Tipo:</strong>
    <%= producto.tipo %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Estado:</strong>
    <%= producto.estado %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Autor:</strong>
    <%= producto.autor_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Categoria:</strong>
    <%= producto.categoria_id %>
  </div>
</div>
