<%= turbo_include_tags %>

<div class="flex items-center justify-center min-h-screen bg-slate-900">
  <div class="w-full max-w-2xl space-y-8 bg-slate-800/60 rounded-3xl border border-slate-700/60 p-10 shadow-2xl">
    <div class="text-center space-y-2">
      <div class="mx-auto h-12 w-12 rounded-full bg-indigo-500/20 flex items-center justify-center">
        <svg class="h-7 w-7 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
        </svg>
      </div>
      <h2 class="text-2xl font-semibold text-white tracking-tight">
        <%= producto.new_record? ? "Agregar Producto" : "Editar Producto" %>
      </h2>
      <p class="text-sm text-slate-400">Completa los datos del producto</p>
    </div>

    <%= form_with(model: producto, class: "space-y-6") do |form| %>
      <% if producto.errors.any? %>
        <div class="rounded-xl border border-red-500/30 bg-red-500/10 px-4 py-3">
          <h3 class="text-sm font-semibold text-red-200 mb-2">
            <%= pluralize(producto.errors.count, "error") %> impidieron guardar este producto:
          </h3>
          <ul class="list-disc list-inside text-sm text-red-300 space-y-1">
            <% producto.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= form.label :nombre, class: "block text-sm font-medium text-slate-300" do %>
          Nombre <span class="text-red-400">*</span>
        <% end %>
        <%= form.text_field :nombre, 
            required: true,
            minlength: 3,
            maxlength: 100,
            class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 placeholder-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition",
            placeholder: "Nombre del producto" %>
        <p class="text-xs text-slate-500">Mínimo 3 caracteres</p>
      </div>

      <div class="space-y-2">
        <%= form.label :descripcion, class: "block text-sm font-medium text-slate-300" %>
        <%= form.text_area :descripcion, rows: 4,
            maxlength: 500,
            class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 placeholder-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition",
            placeholder: "Describe el producto..." %>
        <p class="text-xs text-slate-500">Máximo 500 caracteres</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-2">
          <%= form.label :precio, class: "block text-sm font-medium text-slate-300" do %>
            Precio <span class="text-red-400">*</span>
          <% end %>
          <%= form.number_field :precio, 
              step: 0.01,
              min: 0,
              required: true,
              class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 placeholder-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition",
              placeholder: "0.00" %>
          <p class="text-xs text-slate-500">Debe ser mayor o igual a 0</p>
        </div>

        <div class="space-y-2">
          <%= form.label :stock, class: "block text-sm font-medium text-slate-300" do %>
            Stock <span class="text-red-400">*</span>
          <% end %>
          <%= form.number_field :stock,
              min: 0,
              required: true,
              class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 placeholder-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition",
              placeholder: "0" %>
          <p class="text-xs text-slate-500">Cantidad disponible</p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-2">
          <%= form.label :tipo, class: "block text-sm font-medium text-slate-300" do %>
            Tipo <span class="text-red-400">*</span>
          <% end %>
          <%= form.select :tipo,
              [['Vinilo', 'vinilo'], ['CD', 'cd']], 
              { prompt: "Selecciona el tipo" },
              { required: true,
                class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition" } %>
        </div>

        <div class="space-y-2">
          <%= form.label :estado, class: "block text-sm font-medium text-slate-300" do %>
            Estado <span class="text-red-400">*</span>
          <% end %>
          <%= form.select :estado, 
              [['Nuevo', 'nuevo'], ['Usado', 'usado']], 
              { prompt: "Selecciona un estado" },
              { required: true,
                data: { action: "change->audio-muestra#toggleAudio" },
                class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition" } %>
        </div>
      </div>

      <!-- Campo de Audio Muestra (solo si es usado) -->
      <div class="space-y-2" 
           data-audio-muestra-target="container"
           style="<%= 'display: none;' unless producto.usado? %>">
        <%= form.label :audio_muestra, class: "block text-sm font-medium text-slate-300" do %>
          Audio de Muestra <span class="text-red-400">*</span>
        <% end %>
        
        <% if producto.persisted? && producto.audio_muestra.attached? %>
          <div class="mb-3 p-3 rounded-lg bg-slate-700/50 border border-slate-600">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-2">
                <svg class="h-5 w-5 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                </svg>
                <span class="text-sm text-slate-300"><%= producto.audio_muestra.filename %></span>
              </div>
              <%= link_to "Eliminar",
                  "#",
                  class: "text-xs text-red-400 hover:text-red-300",
                  data: { 
                    turbo_method: :delete,
                    turbo_confirm: "¿Eliminar el audio?"
                  } %>
            </div>
            <audio controls class="w-full mt-2">
              <%= audio_tag url_for(producto.audio_muestra), controls: true, class: "w-full" %>
            </audio>
          </div>
        <% end %>
        
        <div class="relative">
          <%= form.file_field :audio_muestra,
              accept: "audio/mpeg,audio/mp3,.mp3",
              required: producto.usado? && !producto.audio_muestra.attached?,
              data: { audio_muestra_target: "input" },
              class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-indigo-500 file:text-white hover:file:bg-indigo-400 file:cursor-pointer focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition" %>
        </div>
        <p class="text-xs text-slate-500 mt-1">
          <%= producto.audio_muestra.attached? ? "Reemplaza el audio o deja vacío para mantener el actual" : "Archivo MP3 (máx 10MB)" %>
        </p>
      </div>

      <div class="space-y-2">
        <%= form.label :categoria_id, class: "block text-sm font-medium text-slate-300" do %>
          Categoría <span class="text-red-400">*</span>
        <% end %>
        <%= form.collection_select :categoria_id, Categorium.all, :id, :nombre, 
            { prompt: "Selecciona una categoría" },
            { required: true,
              class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition" } %>
      </div>

      <div class="space-y-2">
        <%= form.label :imagenes, class: "block text-sm font-medium text-slate-300" do %>
          Imágenes del Producto <% unless producto.persisted? && producto.imagenes.attached? %><span class="text-red-400">*</span><% end %>
        <% end %>
        
        <!-- Mostrar imágenes actuales si es edición -->
        <% if producto.persisted? && producto.imagenes.attached? %>
          <div class="mb-4">
            <p class="text-xs text-slate-400 mb-3">Imágenes actuales:</p>
            <div class="grid grid-cols-3 gap-3">
              <% producto.imagenes.each do |imagen| %>
                <div class="relative group">
                  <%= image_tag imagen, class: "w-full h-24 object-cover rounded-lg border-2 border-slate-600" %>
                  <%= link_to delete_image_producto_path(producto, imagen_id: imagen.id),
                      data: { 
                        turbo_method: :delete,
                        turbo_confirm: "¿Eliminar esta imagen?"
                      },
                      class: "absolute inset-0 bg-red-500/80 rounded-lg opacity-0 group-hover:opacity-100 transition flex items-center justify-center text-white text-xs font-semibold" do %>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        
        <div class="relative">
          <%= form.file_field :imagenes, 
              multiple: true,
              accept: "image/png,image/jpg,image/jpeg",
              required: producto.new_record? || (!producto.imagenes.attached?),
              class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-indigo-500 file:text-white hover:file:bg-indigo-400 file:cursor-pointer focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition" %>
        </div>
        <p class="text-xs text-slate-500 mt-1">
          <%= producto.persisted? && producto.imagenes.attached? ? "Agrega más imágenes o deja vacío para mantener las actuales" : "Debes seleccionar al menos una imagen (PNG, JPG, JPEG - máx 5MB cada una)" %>
        </p>
      </div>

      <div class="space-y-2">
        <%= form.label :autor_id, "Autor", class: "block text-sm font-medium text-slate-300" %>
        <%= form.collection_select :autor_id, Autor.all, :id, :nombre, 
            { prompt: "Selecciona un autor", include_blank: "O escribe uno nuevo abajo" },
            class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition" %>
        
        <div class="mt-3">
          <%= form.label :nuevo_autor, "Nuevo Autor", class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= form.text_field :nuevo_autor, 
              minlength: 3,
              maxlength: 50,
              class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 placeholder-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition",
              placeholder: "Escribe el nombre del nuevo autor" %>
          <p class="text-xs text-slate-500 mt-1">Si escribes un nuevo autor, se ignorará la selección anterior</p>
        </div>
      </div>

      <div class="flex items-center justify-between gap-4 pt-4">
        <%= form.submit producto.new_record? ? "Crear Producto" : "Aplicar Edición",
            class: "w-full rounded-xl bg-indigo-500 hover:bg-indigo-400 px-4 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 transition transform hover:-translate-y-0.5" %>
        <%= link_to "Cancelar", productos_path,
            class: "w-full text-center rounded-xl bg-slate-700 hover:bg-slate-600 px-4 py-3 text-sm font-semibold text-white transition" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('turbo:load', function() {
    const estadoSelect = document.querySelector('select[name="producto[estado]"]');
    const audioContainer = document.querySelector('[data-audio-muestra-target="container"]');
    const audioInput = document.querySelector('[data-audio-muestra-target="input"]');
    
    if (estadoSelect && audioContainer) {
      estadoSelect.addEventListener('change', function() {
        if (this.value === 'usado') {
          audioContainer.style.display = 'block';
          if (audioInput) audioInput.required = true;
        } else {
          audioContainer.style.display = 'none';
          if (audioInput) audioInput.required = false;
        }
      });
    }
  });
</script>