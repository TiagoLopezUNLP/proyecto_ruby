<div class="min-h-screen bg-slate-900 py-8">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Renderizar el producto -->
    <%= render @producto %>

    <!-- Botones de acción -->
    <div class="mt-8 flex flex-wrap items-center justify-center sm:justify-start gap-4">
      <%= link_to productos_path, class: "rounded-xl bg-slate-700 hover:bg-slate-600 px-6 py-3 text-sm font-semibold text-white transition flex items-center gap-2" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Volver a Productos
      <% end %>

      <%= link_to edit_producto_path(@producto), class: "rounded-xl bg-indigo-500 hover:bg-indigo-400 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 transition flex items-center gap-2" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Editar Producto
      <% end %>

      <%= button_to producto_path(@producto), method: :delete, 
          class: "rounded-xl bg-red-500 hover:bg-red-400 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-red-500/30 transition flex items-center gap-2",
          data: { turbo_confirm: "¿Estás seguro de eliminar este producto?" },
          form: { class: "inline-block" } do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Eliminar Producto
      <% end %>
    </div>
  </div>
</div>