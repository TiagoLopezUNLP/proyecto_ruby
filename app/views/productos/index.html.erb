<div class="min-h-screen bg-slate-900 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if notice.present? %>
      <div class="mb-6 rounded-xl border border-green-500/30 bg-green-500/10 px-4 py-3">
        <p class="text-sm text-green-200"><%= notice %></p>
      </div>
    <% end %>

    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-white">Productos</h1>
        <p class="text-slate-400 mt-1">Gestiona tu inventario de productos</p>
      </div>
      <%= link_to new_producto_path, class: "rounded-xl bg-indigo-500 hover:bg-indigo-400 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 transition transform hover:-translate-y-0.5 flex items-center gap-2" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Crear Producto
      <% end %>
    </div>

    <%= render "shared/filtrosProducto", path: productos_path %>

    <% if @productos.any? %>
      <div class="space-y-4">
        <% @productos.each do |producto| %>
          <div class="bg-slate-800/60 rounded-3xl border border-slate-700/60 shadow-2xl hover:border-indigo-500/50 transition duration-300 overflow-hidden">
            <div class="flex flex-col sm:flex-row sm:items-center p-4 sm:p-6 gap-4">
              <!-- Imagen -->
              <div class="flex-shrink-0">
                <% if producto.imagenes.attached? %>
                  <%= image_tag producto.imagenes.first, class: "h-20 w-20 sm:h-24 sm:w-24 rounded-lg object-cover border-2 border-slate-600" %>
                <% else %>
                  <div class="h-20 w-20 sm:h-24 sm:w-24 rounded-lg bg-slate-700 flex items-center justify-center border-2 border-slate-600">
                    <svg class="h-8 w-8 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                <% end %>
              </div>
              
              <!-- Información -->
              <div class="flex-1 min-w-0 grid grid-cols-2 sm:grid-cols-5 gap-3 sm:gap-4">
                <div class="col-span-2 sm:col-span-2">
                  <p class="text-xs text-slate-400 mb-1">Nombre</p>
                  <p class="text-sm sm:text-base font-medium text-white truncate"><%= producto.nombre %></p>
                  <p class="text-xs text-slate-400 mt-0.5"><%= producto.autor.nombre %></p>
                </div>
                
                <div>
                  <p class="text-xs text-slate-400 mb-1">Precio</p>
                  <p class="text-base sm:text-lg font-bold text-green-400">$<%= number_with_precision(producto.precio, precision: 2) %></p>
                </div>
                
                <div>
                  <p class="text-xs text-slate-400 mb-1">Stock</p>
                  <% if producto.stock > 10 %>
                    <span class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-500/20 text-green-400">
                      <%= producto.stock %>
                    </span>
                  <% elsif producto.stock > 0 %>
                    <span class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-500/20 text-yellow-400">
                      <%= producto.stock %>
                    </span>
                  <% else %>
                    <span class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-500/20 text-red-400">
                      Agotado
                    </span>
                  <% end %>
                </div>
                
                <div>
                  <p class="text-xs text-slate-400 mb-1">Características</p>
                  <div class="flex flex-wrap gap-1.5">
                    <span class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-500/20 text-blue-400">
                      <%= producto.tipo&.capitalize %>
                    </span>
                    <% case producto.estado %>
                    <% when 'nuevo' %>
                      <span class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full bg-emerald-500/20 text-emerald-400">
                        Nuevo
                      </span>
                    <% when 'usado' %>
                      <span class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full bg-amber-500/20 text-amber-400">
                        Usado
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
              
              <!-- Acciones -->
              <div class="flex sm:flex-col items-center gap-2 justify-end sm:justify-start">
                <%= link_to producto, class: "p-2 text-indigo-400 hover:text-indigo-300 hover:bg-indigo-500/10 rounded-lg transition" do %>
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                <% end %>
                <%= link_to edit_producto_path(producto), class: "p-2 text-slate-400 hover:text-slate-300 hover:bg-slate-700/50 rounded-lg transition" do %>
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                <% end %>
                <%= button_to producto, method: :delete, 
                    class: "p-2 text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded-lg transition",
                    data: { turbo_confirm: "¿Estás seguro de eliminar este producto?" },
                    form: { class: "inline-block" } do %>
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16 bg-slate-800/60 rounded-3xl border border-slate-700/60">
        <svg class="mx-auto h-12 w-12 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-slate-300">No hay productos</h3>
        <p class="mt-2 text-sm text-slate-500">Comienza creando tu primer producto.</p>
        <%= link_to "Crear Producto", new_producto_path, class: "mt-6 inline-flex items-center gap-2 rounded-xl bg-indigo-500 hover:bg-indigo-400 px-6 py-3 text-sm font-semibold text-white transition" %>
      </div>
    <% end %>
    <%= render partial: "shared/paginacion", locals: { coleccion: @productos } %>
  </div>
</div>

  </div>
</div>