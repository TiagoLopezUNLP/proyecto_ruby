<div class="min-h-screen flex items-center justify-center bg-slate-900">
  <div class="w-full max-w-2xl space-y-8 bg-slate-800/60 rounded-3xl border border-slate-700/60 p-10 shadow-2xl">
    <div class="text-center space-y-2">
      <h2 class="text-2xl font-semibold text-white tracking-tight">Editar cuenta</h2>
      <p class="text-sm text-slate-400">Actualiza tus datos y contraseña</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-2">
        <%= f.label :email, class: "block text-sm font-medium text-slate-300" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 placeholder-slate-500 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500/50 transition" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="rounded-xl border border-amber-500/30 bg-amber-500/10 px-4 py-3 text-sm text-amber-200">
          Esperando confirmación para: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="space-y-2">
        <div class="flex items-center justify-between">
          <%= f.label :password, class: "block text-sm font-medium text-slate-300" %>
          <span class="text-xs text-slate-500">Déjalo en blanco si no deseas cambiarlo</span>
        </div>
        <%= f.password_field :password, autocomplete: "new-password",
            class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 placeholder-slate-500 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500/50 transition" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-slate-500"><%= @minimum_password_length %> caracteres mínimo</p>
        <% end %>
      </div>

      <div class="space-y-2">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-slate-300" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 placeholder-slate-500 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500/50 transition" %>
      </div>

      <div class="space-y-2">
        <div class="flex items-center justify-between">
          <%= f.label :current_password, class: "block text-sm font-medium text-slate-300" %>
          <span class="text-xs text-slate-500">Necesitamos tu contraseña actual</span>
        </div>
        <%= f.password_field :current_password, autocomplete: "current-password",
            class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 placeholder-slate-500 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500/50 transition" %>
      </div>

      <div class="flex items-center justify-between gap-4">
        <%= f.submit "Guardar cambios",
            class: "w-full rounded-xl bg-emerald-500 hover:bg-emerald-400 px-4 py-3 text-sm font-semibold text-white shadow-lg shadow-emerald-500/30 transition transform hover:-translate-y-0.5" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to "Volver", root_path,
            class: "text-sm font-medium text-slate-400 hover:text-slate-200 transition" %>
    </div>
  </div>
</div>