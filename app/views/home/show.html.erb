<div class="max-w-6xl mx-auto">
  <!-- Breadcrumb -->
  <nav class="mb-6 text-sm">
    <ol class="flex items-center space-x-2 text-slate-400">
      <li>
        <%= link_to "Inicio", root_path, class: "hover:text-blue-400 transition" %>
      </li>
      <li>
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
      </li>
      <li class="text-white"><%= @producto.nombre %></li>
    </ol>
  </nav>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
    <!-- Galería de imágenes -->
    <div class="space-y-4">
      <% if @producto.imagenes.attached? %>
        <!-- Imagen principal -->
        <div id="imagen-principal" class="bg-slate-800 rounded-lg overflow-hidden shadow-xl border border-slate-700">
          <%= image_tag @producto.imagen_portada, 
              class: "w-full h-96 object-cover",
              alt: @producto.nombre,
              id: "main-image" %>
        </div>
        
        <!-- Thumbnails -->
        <% if @producto.imagenes.count > 1 %>
          <div class="grid grid-cols-4 gap-3">
            <% @producto.imagenes.each_with_index do |imagen, index| %>
              <%= image_tag imagen, 
                  class: "w-full h-24 object-cover rounded-lg cursor-pointer border-2 hover:border-blue-500 transition #{index == 0 ? 'border-blue-500' : 'border-slate-700'}",
                  alt: "#{@producto.nombre} - imagen #{index + 1}",
                  data: { action: "click->gallery#change", index: index } %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="bg-slate-800 rounded-lg h-96 flex items-center justify-center border border-slate-700">
          <svg class="w-32 h-32 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
          </svg>
        </div>
      <% end %>
      
      <!-- Audio de muestra para productos usados -->
      <% if @producto.usado? && @producto.audio_muestra.attached? %>
        <div class="bg-slate-800 rounded-lg p-4 border border-slate-700">
          <h3 class="text-white font-semibold mb-3 flex items-center">
            <svg class="w-5 h-5 mr-2 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"/>
            </svg>
            Audio de muestra
          </h3>
          <audio controls class="w-full">
            <source src="<%= url_for(@producto.audio_muestra) %>" type="audio/mpeg">
            Tu navegador no soporta el elemento de audio.
          </audio>
          <p class="text-xs text-slate-400 mt-2">
            Escucha cómo suena este disco usado antes de comprarlo
          </p>
        </div>
      <% end %>
    </div>

    <!-- Información del producto -->
    <div class="space-y-6">
      <!-- Título y badges -->
      <div>
        <div class="flex gap-2 mb-3">
          <% if @producto.tipo.present? %>
            <span class="px-3 py-1 text-sm font-semibold rounded-full <%= @producto.tipo == 'vinilo' ? 'bg-purple-600 text-white' : 'bg-blue-600 text-white' %>">
              <%= @producto.tipo.upcase %>
            </span>
          <% end %>
          <% if @producto.estado.present? %>
            <span class="px-3 py-1 text-sm font-semibold rounded-full <%= @producto.estado == 'nuevo' ? 'bg-green-600 text-white' : 'bg-yellow-600 text-white' %>">
              <%= @producto.estado.upcase %>
            </span>
          <% end %>
        </div>
        
        <h1 class="text-4xl font-bold text-white mb-3"><%= @producto.nombre %></h1>
        
        <div class="flex items-center text-slate-300 space-x-4 text-lg">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <%= link_to @producto.autor.nombre, root_path(q: { autor_nombre_cont: @producto.autor.nombre }), class: "hover:text-blue-400 transition" %>
          </div>
          
          <% if @producto.categoria.present? %>
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
              <%= link_to @producto.categoria.nombre, root_path(q: { categoria_nombre_cont: @producto.categoria.nombre }), class: "hover:text-purple-400 transition" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Precio y stock -->
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex items-center justify-between mb-4">
          <div>
            <p class="text-sm text-slate-400 mb-1">Precio</p>
            <p class="text-4xl font-bold text-blue-400">
              $<%= number_with_delimiter(@producto.precio, delimiter: '.') %>
            </p>
          </div>
          
          <div class="text-right">
            <p class="text-sm text-slate-400 mb-1">Stock disponible</p>
            <p class="text-2xl font-bold <%= @producto.stock > 5 ? 'text-green-400' : 'text-yellow-400' %>">
              <%= @producto.stock %> unidades
            </p>
          </div>
        </div>
        
        <% if @producto.stock > 0 %>
          <div class="p-4 bg-green-900/30 border border-green-600 rounded-lg">
            <p class="text-green-400 font-medium flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              Disponible - Visítanos en la tienda para comprarlo
            </p>
          </div>
        <% else %>
          <div class="p-4 bg-red-900/30 border border-red-600 rounded-lg">
            <p class="text-red-400 font-medium flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Agotado
            </p>
          </div>
        <% end %>
      </div>

      <!-- Descripción -->
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <h3 class="text-xl font-bold text-white mb-3">Descripción</h3>
        <% if @producto.descripcion.present? %>
          <p class="text-slate-300 leading-relaxed whitespace-pre-line">
            <%= @producto.descripcion %>
          </p>
        <% else %>
          <p class="text-slate-500 italic">No hay descripción disponible</p>
        <% end %>
      </div>

      <!-- Información adicional -->
      <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
        <h3 class="text-xl font-bold text-white mb-4">Detalles</h3>
        <dl class="space-y-3">
          <div class="flex justify-between py-2 border-b border-slate-700">
            <dt class="text-slate-400">Formato</dt>
            <dd class="text-white font-medium"><%= @producto.tipo&.capitalize || 'N/A' %></dd>
          </div>
          <div class="flex justify-between py-2 border-b border-slate-700">
            <dt class="text-slate-400">Condición</dt>
            <dd class="text-white font-medium"><%= @producto.estado&.capitalize || 'N/A' %></dd>
          </div>
          <div class="flex justify-between py-2 border-b border-slate-700">
            <dt class="text-slate-400">Género</dt>
            <dd class="text-white font-medium"><%= @producto.categoria&.nombre || 'N/A' %></dd>
          </div>
          <div class="flex justify-between py-2">
            <dt class="text-slate-400">Fecha de ingreso</dt>
            <dd class="text-white font-medium">
              <%= @producto.fecha_ingreso&.strftime('%d/%m/%Y') || @producto.created_at.strftime('%d/%m/%Y') %>
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>

  <!-- Productos relacionados -->
  <% if @productos_relacionados.any? %>
    <div class="mt-16">
      <h2 class="text-3xl font-bold text-white mb-6 flex items-center">
        <svg class="w-8 h-8 mr-3 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
        </svg>
        También te puede interesar
      </h2>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <% @productos_relacionados.each do |producto| %>
          <%= link_to producto_path(producto), class: "group block" do %>
            <div class="bg-slate-800 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 border border-slate-700 hover:border-blue-500">
              <div class="relative h-48 bg-slate-700 overflow-hidden">
                <% if producto.imagenes.attached? && producto.imagen_portada %>
                  <%= image_tag producto.imagen_portada, 
                      class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-300",
                      alt: producto.nombre %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center">
                    <svg class="w-16 h-16 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
                    </svg>
                  </div>
                <% end %>
              </div>
              
              <div class="p-4">
                <h3 class="text-white font-semibold mb-1 line-clamp-2 group-hover:text-blue-400 transition-colors">
                  <%= producto.nombre %>
                </h3>
                <p class="text-slate-400 text-sm mb-2"><%= producto.autor.nombre %></p>
                <p class="text-blue-400 font-bold text-lg">
                  $<%= number_with_delimiter(producto.precio, delimiter: '.') %>
                </p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Botón volver -->
  <div class="mt-8">
    <%= link_to root_path, class: "inline-flex items-center px-6 py-3 bg-slate-700 hover:bg-slate-600 text-white rounded-lg font-medium transition duration-300 border border-slate-600" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Volver al catálogo
    <% end %>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
