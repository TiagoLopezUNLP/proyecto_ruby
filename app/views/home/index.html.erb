<!-- Hero Section -->
<div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg shadow-xl mb-8 overflow-hidden">
  <div class="px-8 py-12 text-center">
    <h1 class="text-5xl font-bold text-white mb-4">游꿧 Disquer칤a Online</h1>
    <p class="text-xl text-blue-100 max-w-2xl mx-auto">
      Descubre nuestra colecci칩n de vinilos y CDs. Nuevos y usados, los mejores discos para tu colecci칩n.
    </p>
  </div>
</div>

<!-- Filtros de B칰squeda -->
<%= render 'filtros' %>

<!-- Contador de Resultados -->
<div class="flex justify-between items-center mb-6">
  <p class="text-slate-300">
    <% if @productos.any? %>
      Mostrando <%= @productos.count %> de <%= @productos.total_entries %> productos
    <% else %>
      No se encontraron productos
    <% end %>
  </p>
</div>

<!-- Grid de Productos -->
<% if @productos.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
    <% @productos.each do |producto| %>
      <%= link_to producto_path(producto), class: "group block" do %>
        <div class="bg-slate-800 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 border border-slate-700 hover:border-blue-500">
          <!-- Imagen del producto -->
          <div class="relative h-64 bg-slate-700 overflow-hidden">
            <% if producto.imagenes.attached? && producto.imagen_portada %>
              <%= image_tag producto.imagen_portada, 
                  class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-300",
                  alt: producto.nombre %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center bg-slate-700">
                <svg class="w-24 h-24 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
                </svg>
              </div>
            <% end %>
            
            <!-- Badges -->
            <div class="absolute top-3 left-3 flex gap-2">
              <% if producto.tipo.present? %>
                <span class="px-3 py-1 text-xs font-semibold rounded-full <%= producto.tipo == 'vinilo' ? 'bg-purple-600 text-white' : 'bg-blue-600 text-white' %>">
                  <%= producto.tipo.upcase %>
                </span>
              <% end %>
              <% if producto.estado.present? %>
                <span class="px-3 py-1 text-xs font-semibold rounded-full <%= producto.estado == 'nuevo' ? 'bg-green-600 text-white' : 'bg-yellow-600 text-white' %>">
                  <%= producto.estado.upcase %>
                </span>
              <% end %>
            </div>
            
            <!-- Stock badge -->
            <% if producto.stock == 0 %>
              <div class="absolute top-3 right-3">
                <span class="px-3 py-1 text-xs font-semibold rounded-full bg-red-600 text-white">
                  Sin Stock
                </span>
              </div>
            <% end %>
          </div>
          
          <!-- Informaci칩n del producto -->
          <div class="p-5">
            <h3 class="text-lg font-bold text-white mb-2 line-clamp-2 group-hover:text-blue-400 transition-colors">
              <%= producto.nombre %>
            </h3>
            
            <p class="text-slate-400 text-sm mb-3 flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              <%= producto.autor.nombre %>
            </p>

            <% if producto.categoria.present? %>
              <p class="text-slate-500 text-xs mb-3">
                Categoria: <%= producto.categoria.nombre %>
              </p>
            <% end %>

            <% if producto.release_year.present? %>
              <p class="text-slate-500 text-xs mb-3">
                A침o de lanzamiento : <%= producto.release_year %>
              </p>
            <% end %>


            <div class="flex justify-between items-center mt-4 pt-4 border-t border-slate-700">
              <span class="text-2xl font-bold text-blue-400">
                $<%= number_with_delimiter(producto.precio, delimiter: '.') %>
              </span>
              <span class="text-sm text-slate-400">
                Stock: <span class="font-semibold text-white"><%= producto.stock %></span>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  
  <%= render partial: "shared/paginacion", locals: { coleccion: @productos } %>
<% else %>
  <!-- Mensaje cuando no hay productos -->
  <div class="text-center py-16">
    <div class="bg-slate-800 rounded-lg p-12 max-w-md mx-auto border border-slate-700">
      <svg class="w-24 h-24 text-slate-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <h3 class="text-xl font-semibold text-slate-300 mb-2">No se encontraron productos</h3>
      <p class="text-slate-400 mb-6">Intenta ajustar tus filtros de b칰squeda</p>
      <%= link_to "Ver todos los productos", root_path, class: "inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition duration-300" %>
    </div>
  </div>
<% end %>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

