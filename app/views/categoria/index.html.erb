<% content_for :title, "Categorías" %>

<div class="min-h-screen bg-slate-900 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div>
        <h1 class="text-3xl font-bold text-white">Categorías</h1>
        <p class="text-slate-400 mt-1">Gestiona los géneros musicales</p>
      </div>
      <%= link_to new_categorium_path, class: "mt-4 rounded-xl bg-indigo-500 hover:bg-indigo-400 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 transition transform hover:-translate-y-0.5 inline-flex items-center gap-2" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Crear Categoría
      <% end %>
    </div>
    <%= render "shared/filtroCategoria", path: categoria_path %>
    <% if @categoria.any? %>
      <div class="space-y-4">
        <% @categoria.each do |categorium| %>
          <div class="bg-slate-800/60 rounded-3xl border border-slate-700/60 shadow-2xl hover:border-indigo-500/50 transition duration-300 overflow-hidden">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between p-4 sm:p-6 gap-4">
              <div class="flex items-center flex-1">
                <div class="h-12 w-12 sm:h-14 sm:w-14 rounded-full bg-purple-500/20 flex items-center justify-center mr-3 sm:mr-4 flex-shrink-0">
                  <svg class="h-6 w-6 sm:h-7 sm:w-7 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                </div>
                <div>
                  <div class="text-sm sm:text-base font-medium text-white"><%= categorium.nombre %></div>
                  <% if categorium.productos.any? %>
                    <div class="flex items-center gap-2 mt-1">
                      <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full bg-slate-700/60 text-slate-300 text-xs">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                        </svg>
                        <%= categorium.productos.count %> productos
                      </span>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="flex items-center gap-2 justify-end">
                <%= link_to categorium, class: "p-2 text-indigo-400 hover:text-indigo-300 hover:bg-indigo-500/10 rounded-lg transition" do %>
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                <% end %>
                <%= link_to edit_categorium_path(categorium), class: "p-2 text-slate-400 hover:text-slate-300 hover:bg-slate-700/50 rounded-lg transition" do %>
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                <% end %>
                <%= button_to categorium, method: :delete,
                              class: "p-2 text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded-lg transition",
                              data: {
                                turbo_confirm: categorium.productos.any? ?
                                                 "#{categorium.nombre} tiene #{categorium.productos.count} producto(s).\n\n¿Estás seguro de eliminar esta categoría?" :
                                                 "¿Estás seguro de eliminar la categoría #{categorium.nombre}?"
                              },
                              form: { class: "inline-block" } do %>
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16 bg-slate-800/60 rounded-3xl border border-slate-700/60">
        <svg class="mx-auto h-12 w-12 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-slate-300">No hay categorías</h3>
        <p class="mt-2 text-sm text-slate-500">Comienza creando tu primera categoría.</p>
        <%= link_to "Crear Categoría", new_categorium_path, class: "mt-6 inline-flex items-center gap-2 rounded-xl bg-indigo-500 hover:bg-indigo-400 px-6 py-3 text-sm font-semibold text-white transition" %>
      </div>
    <% end %>
    <%= render partial: "shared/paginacion", locals: { coleccion: @categoria } %>
  </div>
</div>