<% content_for :title, "Categoría: #{@categorium.nombre}" %>

<div class="min-h-screen bg-slate-900 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white"><%= @categorium.nombre %></h1>
          <p class="text-slate-400 mt-1">Detalles de la categoría</p>
        </div>

        <div class="flex items-center gap-3">
          <%= link_to edit_categorium_path(@categorium),
                      class: "flex items-center gap-2 rounded-xl bg-indigo-500 hover:bg-indigo-400 px-4 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 transition" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Editar
          <% end %>

          <%= link_to "Volver", categoria_path,
                      class: "rounded-xl bg-slate-700 hover:bg-slate-600 px-4 py-3 text-sm font-semibold text-white transition" %>
        </div>
      </div>
    </div>

    <!-- Tarjeta principal -->
    <div class="bg-slate-800/60 rounded-2xl border border-slate-700/60 p-6 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Información básica -->
        <div class="md:col-span-2">
          <div class="flex items-center gap-4 mb-6">
            <div class="h-16 w-16 rounded-full bg-purple-500/20 flex items-center justify-center">
              <svg class="h-8 w-8 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-white"><%= @categorium.nombre %></h2>
              <% if @categorium.productos.any? %>
                <div class="flex items-center gap-2 mt-1">
                  <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-slate-700 text-slate-300 text-sm">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                    </svg>
                    <%= @categorium.productos.count %> productos
                  </span>
                </div>
              <% else %>
                <p class="text-slate-500 text-sm mt-1">Sin productos asociados</p>
              <% end %>
            </div>
          </div>

          <!-- Productos asociados (si hay) -->
          <% if @categorium.productos.any? %>
            <div class="mt-6">
              <h3 class="text-lg font-semibold text-white mb-3">Productos en esta categoría</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                <% @categorium.productos.limit(4).each do |producto| %>
                  <%= link_to producto_path(producto),
                              class: "bg-slate-800/40 hover:bg-slate-800/60 rounded-xl border border-slate-700/50 p-4 transition" do %>
                    <div class="flex items-center justify-between">
                      <div>
                        <h4 class="font-medium text-white"><%= producto.nombre %></h4>
                        <div class="flex items-center gap-2 mt-1">
                          <span class="text-xs px-2 py-1 rounded-full <%= producto.tipo == 'Vinilo' ? 'bg-purple-500/20 text-purple-300' : 'bg-blue-500/20 text-blue-300' %>">
                            <%= producto.tipo %>
                          </span>
                          <span class="text-xs text-slate-500">
                            <%= producto.autor.nombre if producto.autor %>
                          </span>
                        </div>
                      </div>
                      <span class="text-sm font-semibold text-white">
                        $<%= number_with_delimiter(producto.precio, delimiter: '.') %>
                      </span>
                    </div>
                  <% end %>
                <% end %>
              </div>
              <% if @categorium.productos.count > 4 %>
                <div class="mt-3 text-center">
                  <%= link_to "Ver todos los productos", productos_path(categoria_id: @categorium.id),
                              class: "text-indigo-400 hover:text-indigo-300 text-sm font-medium" %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>



          <!-- Acciones -->
          <div class="bg-slate-800/40 rounded-xl border border-slate-700/50 p-4">
            <h3 class="text-lg font-semibold text-white mb-3">Acciones</h3>
            <div class="space-y-2">
              <%= link_to "Volver a categorías", categoria_path,
                          class: "flex items-center justify-center gap-2 w-full rounded-xl bg-slate-700 hover:bg-slate-600 px-4 py-2.5 text-sm font-medium text-white transition" %>

              <%= button_to categorium_path(@categorium),
                            method: :delete,
                            data: {
                              turbo_confirm: @categorium.productos.any? ?
                                               "Esta categoría tiene #{@categorium.productos.count} producto(s). ¿Eliminar categoría y productos asociados?" :
                                               "¿Estás seguro de eliminar esta categoría?"
                            },
                            class: "flex items-center justify-center gap-2 w-full rounded-xl bg-red-500 hover:bg-red-400 px-4 py-2.5 text-sm font-medium text-white transition" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Eliminar
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>