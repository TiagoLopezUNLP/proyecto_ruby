<div class="flex items-center justify-center min-h-screen bg-slate-900">
  <div class="w-full max-w-2xl space-y-8 bg-slate-800/60 rounded-3xl border border-slate-700/60 p-10 shadow-2xl">
    <div class="text-center space-y-2">
      <div class="mx-auto h-12 w-12 rounded-full bg-indigo-500/20 flex items-center justify-center">
        <svg class="h-7 w-7 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <h2 class="text-2xl font-semibold text-white tracking-tight">
        <%= usuario.new_record? ? "Crear Usuario" : "Editar Usuario" %>
      </h2>
      <p class="text-sm text-slate-400">Completa los datos del usuario</p>
    </div>

    <%= form_with(model: usuario, url: usuario.new_record? ? usuarios_path : usuario_path(usuario), class: "space-y-6") do |form| %>
      <% if usuario.errors.any? %>
        <div class="rounded-xl border border-red-500/30 bg-red-500/10 px-4 py-3">
          <h3 class="text-sm font-semibold text-red-200 mb-2">
            <%= pluralize(usuario.errors.count, "error") %> impidieron guardar este usuario:
          </h3>
          <ul class="list-disc list-inside text-sm text-red-300 space-y-1">
            <% usuario.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= form.label :email, class: "block text-sm font-medium text-slate-300" %>
        <%= form.email_field :email, 
            class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 placeholder-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition",
            placeholder: "usuario@ejemplo.com",
            required: true,
            autocomplete: "email" %>
      </div>

      <div class="space-y-2">
        <%= form.label :password, usuario.new_record? ? "Contraseña" : "Nueva Contraseña (dejar en blanco para mantener)", class: "block text-sm font-medium text-slate-300" %>
        <%= form.password_field :password, 
            class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 placeholder-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition",
            placeholder: usuario.new_record? ? "Mínimo 6 caracteres" : "Dejar vacío para no cambiar",
            required: true,
            autocomplete: "new-password" %>
        <% unless usuario.new_record? %>
          <p class="text-xs text-slate-500 mt-1">Solo completa este campo si deseas cambiar la contraseña</p>
        <% end %>
      </div>

      <div class="space-y-2">
        <%= form.label :password_confirmation, "Confirmar Contraseña", class: "block text-sm font-medium text-slate-300" %>
        <%= form.password_field :password_confirmation, 
            class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 placeholder-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition",
            placeholder: "Repite la contraseña",
            required: true,
            autocomplete: "new-password" %>
      </div>

      <div class="space-y-2">
        <%= form.label :role, "Rol", class: "block text-sm font-medium text-slate-300" %>
        <% 
          # Filtrar roles según el usuario actual
          roles_disponibles = if current_user.administrador?
            User.roles.keys
          else
            User.roles.keys.reject { |role| role == 'administrador' }
          end
        %>
        <%= form.select :role, 
            roles_disponibles.map { |role| [role.capitalize, role] },
            { prompt: "Selecciona un rol" },
            class: "w-full rounded-xl border border-slate-600 bg-slate-900/70 px-4 py-3 text-slate-100 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/50 transition" %>
      </div>

      <div class="flex items-center justify-between gap-4 pt-4">
        <%= form.submit usuario.new_record? ? "Crear Usuario" : "Actualizar Usuario", 
            class: "w-full rounded-xl bg-indigo-500 hover:bg-indigo-400 px-4 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 transition transform hover:-translate-y-0.5" %>
        <%= link_to "Cancelar", usuarios_path,
            class: "w-full text-center rounded-xl bg-slate-700 hover:bg-slate-600 px-4 py-3 text-sm font-semibold text-white transition" %>
      </div>
    <% end %>
  </div>
</div>