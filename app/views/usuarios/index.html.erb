<div class="min-h-screen bg-slate-900 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div>
        <h1 class="text-3xl font-bold text-white">Usuarios del Sistema</h1>
        <p class="text-slate-400 mt-1">Gestiona los usuarios registrados</p>
      </div>
      <%= link_to new_usuario_path, class: "mt-4 rounded-xl bg-indigo-500 hover:bg-indigo-400 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-500/30 transition transform hover:-translate-y-0.5 inline-flex items-center gap-2" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Crear Usuario
      <% end %>
    </div>

    <%= render "filtros" %>

    <% if @usuarios.any? %>
      <div class="space-y-4">
        <% @usuarios.each do |usuario| %>
          <div class="bg-slate-800/60 rounded-3xl border border-slate-700/60 shadow-2xl hover:border-indigo-500/50 transition duration-300 overflow-hidden">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between p-4 sm:p-6 gap-4">
              <!-- Información del usuario -->
              <div class="flex items-center flex-1 min-w-0">
                <div class="h-12 w-12 sm:h-14 sm:w-14 rounded-full bg-indigo-500/20 flex items-center justify-center mr-3 sm:mr-4 flex-shrink-0">
                  <span class="text-indigo-400 font-semibold text-base sm:text-lg">
                    <%= usuario.email.first.upcase %>
                  </span>
                </div>
                <div class="min-w-0 flex-1">
                  <div class="text-sm sm:text-base font-medium text-white truncate"><%= usuario.email %></div>
                  <div class="flex flex-wrap items-center gap-2 mt-2">
                    <% if usuario.role? %>
                      <span class="px-2.5 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-500/20 text-purple-400">
                        <%= usuario.role %>
                      </span>
                    <% end %>
                    <span class="text-xs sm:text-sm text-slate-400">
                      <%= usuario.created_at.strftime("%d/%m/%Y") %>
                    </span>
                  </div>
                </div>
              </div>
              
              <!-- Acciones -->
              <div class="flex items-center gap-2 justify-end">
                <% if can? :update, usuario %>
                  <%= link_to edit_usuario_path(usuario), class: "p-2 text-slate-400 hover:text-slate-300 hover:bg-slate-700/50 rounded-lg transition" do %>
                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  <% end %>
                <% end %>
                
                <% if can? :destroy, usuario %>
                  <%= button_to usuario_path(usuario), method: :delete, 
                      class: "p-2 text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded-lg transition",
                      data: { turbo_confirm: "¿Estás seguro de eliminar este usuario?" },
                      form: { class: "inline-block" } do %>
                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16 bg-slate-800/60 rounded-3xl border border-slate-700/60">
        <svg class="mx-auto h-12 w-12 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-slate-300">No hay usuarios</h3>
        <p class="mt-2 text-sm text-slate-500">No se encontraron usuarios registrados en el sistema.</p>
      </div>
    <% end %>
  </div>
  <%= render partial: "shared/paginacion", locals: { coleccion: @usuarios } %>
</div>